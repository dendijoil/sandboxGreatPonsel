<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Product Listing</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>

<body>
  <div style="margin-bottom: 100px">
    <%- include("./partials/navbar.ejs") %>
  </div>
  <div class="text-center">
    <form action="" method="get">
      <input type="text" name="name" placeholder="Search by name">
      <label for="">Category</label>
      <select name="brand" id="">
        <option selected disabled>-- Select Brand --</option>
        <% brand.forEach(el=> { %>
          <option value="<%= el.id %>">
            <%= el.name %>
          </option>
          <% }) %>
      </select>
      <input type="submit" name="" value="Search" id="">
      <a href="/products">Clear search</a>
    </form>
    <% if (user==='admin' ) { %>
      <a style="margin-top: 30px;" href="/products/add"><button>Add Phone</button></a>
      <a style="margin-top: 30px;" href="/products/emptyStock"><button>Empty Stock Phone</button></a>
      <% } %>
  </div>

  <div class="d-flex flex-wrap">
    <% phones.forEach(el=> { %>
      <div class="card" style="width: 18rem; margin: 10px;">
        <img class="card-img-top" src="<%= el.image %>" alt="Card image cap">
        <div class="card-body">
          <h5 class="card-title">
            <%= el.name %>
          </h5>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">Storage : <%= el.storage %>
          </li>
          <li class="list-group-item">Price : <%= priceToRupiah(el.price) %>
          </li>
          <li class="list-group-item">stock : <%= el.stock %>
          </li>
        </ul>
        <div class="card-body">
          <a href="/products/buy/<%= el.id %>" class="card-link">Buy now!</a>
        </div>
      </div>
      <% }) %>
  </div>


</body>

</html>